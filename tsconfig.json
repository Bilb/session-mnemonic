{
  "compilerOptions": {
    "outDir": "dist",
    "declaration": true,
    "lib": ["es2021"],
    "module": "esnext",
    "target": "es2020",
    "moduleResolution": "node",
    "types": ["node"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
